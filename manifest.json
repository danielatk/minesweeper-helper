{
	"manifest_version": 3,
	"name": "Minesweeper Helper",
	"short_name": "MH",
	"version": "0.0.1",
	"permissions": [
		"activeTab",
		"scripting",
		"webNavigation",
		"debugger",
		"storage",
		"background",
		"webRequest",
		"tabs"
	],
	"host_permissions": [
		"https://minesweeper.online/game/*"
	],
	"web_accessible_resources": [{
		"matches": ["https://minesweeper.online/*"],
		"resources": [
			"client/*",
			"Utility/*",
			"resources/*"
		]
	}],
	"icons": {
		"16": "simley_16.png",
		"48": "simley_48.png",
	    "128": "simley_128.png"
	},
	"action": {
		"name": "popup",
		"default_popup": "popup.html"
	},
 	"description": "Export boards in plain text and outputs to console",
	 "content_scripts": [
		{
		  "matches": ["https://minesweeper.online/game/*"],
		  "js": ["content.js"]
		}
	 ]
} 